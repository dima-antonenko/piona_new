<% provide(:class, 'category-page') %>

<% provide(:seo_title, @page.meta_title) %>
<% provide(:seo_description, @page.meta_description) %>
<% provide(:seo_keywords, @page.meta_keywords) %>

<div class="columns-container">
    <div class="container" id="columns">

        <div class="row">

            <div class="center_column col-xs-12 col-sm-12" id="center_column">
                <h2 class="page-heading">
                    <span class="page-heading-title2"><%= @page.name %></span>
                </h2>
                <div class="content-text clearfix">
                    <%= @page.description.html_safe %>
                </div>
   
            </div>
        </div>
    </div>
</div>