<body class="login_page">

   <div class="login_page_wrapper">
        <div class="md-card" id="login_card">
            <div class="md-card-content large-padding" id="login_form">
                <div class="login_heading">
                    <div class="user_avatar"></div>
                </div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="uk-form-row">
                        <label for="login_username">Email</label>
                        <%= f.email_field :email, autofocus: true, class: "md-input" %>
                    </div>
                    <div class="uk-form-row">
                        <label for="login_password">Пароль</label>
                       <%= f.text_field :password, class: "md-input" %>
                    </div>
                    <div class="uk-margin-medium-top">
                    <%= f.submit "Войти", class: "md-btn md-btn-primary md-btn-block md-btn-large" %>
                    </div>
                    <div class="uk-margin-top">
                        <span class="icheck-inline">
                            <%= f.check_box :remember_me, {"data-md-icheck" => true} %>
                            <label for="login_page_stay_signed" class="inline-label">Оставаться в системе</label>
                        </span>
                    </div>
                <% end %>
            </div>

        </div>
        <div class="uk-margin-top uk-text-center">
          <!--  <a href="/administrators/sign_up">Регистрация</a> -->
        </div>
    </div>

    <!-- common functions -->
    <script src="/admin_theme/assets/js/common.min.js"></script>
    <!-- uikit functions -->
    <script src="/admin_theme/assets/js/uikit_custom.min.js"></script>
    <!-- altair core functions -->
    <script src="/admin_theme/assets/js/altair_admin_common.min.js"></script>

    <!-- altair login page functions -->
    <script src="/admin_theme/assets/js/pages/login.min.js"></script>

</body>