<div id="page_heading">
    <h1 id="product_edit_name">Вопрос № <%= @product_question.id %></h1>
    <span class="uk-text-muted uk-text-upper uk-text-small" id="product_edit_sn">Дата создания: <%= @product_question.created_at %></span>
</div>
<div id="page_content_inner">
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-10-10  uk-width-large-10-10">
            <h3 class="heading_b uk-margin-bottom">Контакты клиента</h3>
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-overflow-container uk-margin-bottom">
                          <p><span class="uk-text-bold">Имя: </span> <%= @product_question.name %></p>
                          <p><span class="uk-text-bold">Телефон: </span> <%= @product_question.phone %></p>
                          <p><span class="uk-text-bold">Текст вопроса: </span> <%= @product_question.text %></p>            
                    </div>
                </div>
            </div>
            <br />

            <h3 class="heading_b uk-margin-bottom">Товар</h3>
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-overflow-container uk-margin-bottom">
                          <p><span class="uk-text-bold">Имя: </span> <%= link_to @product_question.product.name, product_path(@product_question.product) %></p>
                          <p><span class="uk-text-bold">Цена: </span> <%= @product_question.product.price %> р.</p>
                          <p><span class="uk-text-bold">Категория: </span> <%= @product_question.product.product_category.name if @product_question.product.product_category %></p>            
                    </div>
                </div>
            </div>
            
            
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-btn" href="/administrators/product_questions/">Назад</a>
        <%= link_to "Удалить".html_safe, administrators_product_question_path(@product_question), method: :delete, class: "md-btn md-btn-danger" %>
    </div>
</div>