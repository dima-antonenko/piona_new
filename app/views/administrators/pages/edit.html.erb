<div id="page_heading">
    <h1 id="product_edit_name"><%= @page.name %></h1>
</div>
<div id="page_content_inner">
    <%= form_for([:administrators, @page], class: "uk-form-stacked", id: "product_edit_form", :multipart => true, remote: true, authenticity_token: true ) do |f| %>
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-10-10  uk-width-large-10-10">
            <div class="md-card">
                <div class="md-card-content large-padding">
                    <div class="uk-grid uk-grid-divider uk-grid-medium" data-uk-grid-margin>
                        <div class="uk-width-large-2-2">
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Название</label>
                                
                                <%= f.text_field :name, class: "md-input" %>
                            </div>
                            
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Текст</label>
                                
                                 <%= f.cktext_area :description, class: 'ckeditor' %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="md-card">
                <div class="md-card-content large-padding">
                    <div class="uk-grid uk-grid-divider uk-grid-medium" data-uk-grid-margin>
                        <div class="uk-width-large-2-2">
                            
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Мета - title</label>
                                
                                <%= f.text_field :meta_title, class: "md-input" %>
                            </div>
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Мета - description</label>
                                
                                <%= f.text_field :meta_description, class: "md-input" %>
                            </div>
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Мета - keywords</label>
                                
                                <%= f.text_field :meta_keywords, class: "md-input" %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>

        <div class="md-fab-wrapper">
            <a class="md-btn" href="/administrators/pages">Назад</a>
            <%= f.submit(class: "md-btn md-btn-success", value: "Обновить") %>
            <% end %>
        </div>
    </div>
    
</div>