<div id="page_content_inner">
    <h3 class="heading_b uk-margin-bottom">Страницы</h3>
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-8-10  uk-width-large-10-10">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-overflow-container uk-margin-bottom">
                        <table class="uk-table uk-table-align-vertical uk-table-nowrap tablesorter tablesorter-altair" id="ts_pager_filter">
                            <thead>
                                <tr>
                                    <th>id</th>
                                    <th  >Название</th>
                                    <th class="uk-text-center" >Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @pages.each do |page| %>
                                <tr>
                                    <td><%= page.id %></td>
                                    <td><%= page.name %></td>
                                    
                                    <td class="uk-text-center" >
                                        <%= link_to "<i class=\"material-icons md-24\">&#xE254;</i>".html_safe, edit_administrators_page_path(page) %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    
</div>