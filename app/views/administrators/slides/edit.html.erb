<div id="page_heading">
    <h1 id="product_edit_name"><%= @slide.name %></h1>
</div>
<div id="page_content_inner">
    <%= form_for([:administrators, @slide], class: "uk-form-stacked", remote: true, authenticity_token: true, :multipart => true ) do |f| %>
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-7-10  uk-width-large-7-10">
            
            <div class="md-card">
                <div class="md-card-content large-padding">
                    <div class="uk-grid uk-grid-divider uk-grid-medium" data-uk-grid-margin>
                        <div class="uk-width-large-2-2">
                            
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Название</label>
                                <%= f.text_field :name, class: "md-input" %>
                            </div>

                             <div class="uk-form-row">
                                <label for="product_edit_name_control">Слайдер</label>
                                 <%= f.select :slider_id , @sliders,{include_blank: 'Не выбрано'}, {"data-md-selectize ": true} %>
                            </div>
                            
                        
                        </div>
                    </div>
                </div>
            </div>
            <div class="md-card">
                <div class="md-card-toolbar">
                    <div class="md-card-toolbar-actions">
                        <%= f.file_field :image, class: "product_file_upload" %>
                    </div>
                    <h3 class="md-card-toolbar-heading-text">
                    Изображение
                    </h3>
                </div>
                <div class="md-card-content">
                    <div class="uk-margin-bottom uk-text-center uk-position-relative">
                        <img src="<%= @slide.image %>" alt="" class="img_medium"/>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="md-fab-wrapper">
            <a class="md-btn" href="<%= edit_administrators_slider_path(@slide.slider_id) %>">Назад</a>
            <%= link_to "Удалить".html_safe, administrators_slide_path(@slide), method: :delete, data: { confirm: "удалить слайд ?"}, class: "md-btn md-btn-danger" %>
            <%= f.submit(class: "md-btn md-btn-success", value: "Обновить") %>
            <% end %>
        </div>
    </div>
    
</div>