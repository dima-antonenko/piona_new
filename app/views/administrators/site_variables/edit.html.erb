<div id="page_heading">
    <h1 id="product_edit_name"><%= @site_variable.title %></h1>
</div>
<div id="page_content_inner">
    <%= form_for([:administrators, @site_variable], class: "uk-form-stacked", :multipart => true, remote: true, authenticity_token: true ) do |f| %>
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-10-10  uk-width-large-10-10">
            <div class="md-card">
                <div class="md-card-content large-padding">
                    <div class="uk-grid uk-grid-divider uk-grid-medium" data-uk-grid-margin>
                        <div class="uk-width-large-2-2">
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Название</label>
                                <%= f.text_field :title, class: "md-input" %>
                            </div>
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Контент</label>
                                <%= f.text_area :content, class: "md-input", rows: 6, cols: 30 %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>


        <div class="md-fab-wrapper">
            <a class="md-btn" href="/administrators/site_variables">Назад</a>
            <%= f.submit(class: "md-btn md-btn-success", value: "Обновить") %>
            <% end %>
        </div>
    </div>
    
</div>