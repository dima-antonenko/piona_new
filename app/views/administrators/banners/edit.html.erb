<div id="page_heading">
    <h1 id="product_edit_name"><%= @banner.title %></h1>
</div>
<div id="page_content_inner">
    <%= form_for([:administrators, @banner], class: "uk-form-stacked",  :multipart => true ) do |f| %>
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-7-10  uk-width-large-7-10">
            
            <div class="md-card">
                <div class="md-card-content large-padding">
                    <div class="uk-grid uk-grid-divider uk-grid-medium" data-uk-grid-margin>
                        <div class="uk-width-large-2-2">
                            
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Название</label>
                                <%= f.text_field :title, class: "md-input" %>
                            </div>

                             <div class="uk-form-row">
                                <label for="product_edit_name_control">Ссылка</label>
                                 <%= f.text_field :link, class: "md-input" %>
                            </div>
                            
                        
                        </div>
                    </div>
                </div>
            </div>
            <div class="md-card">
                <div class="md-card-toolbar">
                    <div class="md-card-toolbar-actions">
                        <%= f.file_field :image, class: "product_file_upload" %>
                    </div>
                    <h3 class="md-card-toolbar-heading-text">
                    Изображение
                    </h3>
                </div>
                <div class="md-card-content">
                    <div class="uk-margin-bottom uk-text-center uk-position-relative">
                        <img src="<%= @banner.image %>" alt="" class="img_medium"/>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="md-fab-wrapper">
            <a class="md-btn" href="/administrators/banners">Назад</a>
            <%= f.submit(class: "md-btn md-btn-success", value: "Обновить") %>
            <% end %>
        </div>
    </div>
    
</div>