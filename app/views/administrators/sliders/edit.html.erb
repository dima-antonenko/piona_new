<div id="page_content_inner">
    <h3 class="heading_b uk-margin-bottom"><%= @slider.name %></h3>
    <div class="md-card">
        <div class="md-card-content">
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-1">
                    <div class="uk-overflow-container">
                        <table class="uk-table">
                            <thead>
                                <tr>
                                    <th class="uk-text-nowrap">Изображение</th>
                                    <th class="uk-text-nowrap uk-text-center">Название</th>
                                    <th class="uk-text-nowrap uk-text-center">Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @slides.each do |slide| %>
                                <tr class="item<%= slide.id %>">
                                    <td class="uk-text-nowrap"><img class="img_thumb" src="<%= slide.image.list_thumb %>" alt=""></td>
                                    <td class="uk-text-nowrap uk-text-center" ><%= slide.name %></td>
                                    <td class="uk-text-nowrap uk-text-center" >
                            <%= link_to "<i class=\"material-icons md-24\">&#xE254;</i>".html_safe, edit_administrators_slide_path(slide) %>
                            <%= link_to "<i class=\"material-icons md-24\">&#xE872;</i>".html_safe, administrators_slide_path(slide), method: :delete, remote: true, data: { confirm: "удалить слайд ?"} %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="md-fab-wrapper">
            <a class="md-btn  md-btn-success" href="/administrators/slides/new">Добавить</a>
        </div>
    </div>
</div>